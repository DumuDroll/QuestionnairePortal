<?xml version='1.0' encoding='UTF-8'?>

<persistence version='2.0'
             xmlns='http://java.sun.com/xml/ns/persistence' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xsi:schemaLocation='http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd'>

    <persistence-unit name='QPortal'>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.dddd.questionnaireportal.database.entity.User</class>
        <class>com.dddd.questionnaireportal.database.entity.Field</class>
        <class>com.dddd.questionnaireportal.database.entity.FieldsOption</class>
        <class>com.dddd.questionnaireportal.database.entity.Type</class>
        <class>com.dddd.questionnaireportal.database.entity.Response</class>
        <class>com.dddd.questionnaireportal.database.entity.ResponsePerUser</class>


        <properties>
            <property name='javax.persistence.jdbc.driver' value='org.postgresql.Driver' />
            <property name='javax.persistence.jdbc.url' value='jdbc:postgresql://localhost:5432/QPortal' />
            <property name='javax.persistence.jdbc.user' value='postgres' />
            <property name='javax.persistence.jdbc.password' value='root' />
            <property name='hibernate.hbm2ddl.auto' value='update' />
            <property name='hibernate.show_sql' value='true' />
        </properties>
    </persistence-unit>
</persistence>